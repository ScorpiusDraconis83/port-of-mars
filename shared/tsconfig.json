{
  "compilerOptions": {
    "outDir": "lib",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@port-of-mars/shared/*": [
        "src/*"
      ]
    }
  },
  "include": [
      "**/*.ts"
  ]
}
